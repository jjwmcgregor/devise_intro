<p id="notice"><%= notice %></p>

<div class="container">
  <%= link_to 'Back', blogs_path, class: 'btn btn-primary my-4' %>
  <div class="card">
  <%= image_tag @blog.image, class: 'img-responsive', height: '300px' %>
  <div class="card-body">
    <h5 class="card-title"><%= @blog.title %></h5>
    <p class="card-text"><%= @blog.body %></p>
  </div>
    <% if user_signed_in? && @blog.user_id == current_user.id %>
      <div class="card-footer text-center">
        <%= link_to 'Edit', edit_blog_path(@blog), class: 'btn btn-primary' %>
        <%= link_to 'Delete', @blog, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      </div>
    <% end %>
</div>
</div>
